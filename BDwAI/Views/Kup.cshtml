@model BDwAI.Models.Zamowienie

@{
    ViewData["Title"] = "Składanie zamówienia";
    var produkt = ViewBag.Produkt as BDwAI.Models.Produkt;
}

<h2>Podsumowanie zamówienia</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Kupujesz: @produkt.Name</h4>
        <p class="card-text">@produkt.Description</p>
        <h3 class="text-primary">Cena: @produkt.Price.ToString("c")</h3>
    </div>
</div>

<form asp-action="Kup" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Dane do wysyłki</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="produktId" value="@produkt.Id" />

            <div class="form-group mb-3">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Adres" class="control-label">Ulica i numer</label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="KodPocztowy" class="control-label"></label>
                    <input asp-for="KodPocztowy" class="form-control" />
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Miasto" class="control-label"></label>
                    <input asp-for="Miasto" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Szczegóły</h4>
            <hr />
            <div class="form-group mb-3">
                <label class="control-label">Ilość sztuk</label>
                <input type="number" name="ilosc" value="1" min="1" max="@produkt.Quantity" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Potwierdź zakup</button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Anuluj</a>
        </div>
    </div>
</form>