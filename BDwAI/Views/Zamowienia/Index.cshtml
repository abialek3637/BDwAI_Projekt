@model IEnumerable<BDwAI.Models.Zamowienie>

@{
    ViewData["Title"] = "Panel Admina - Lista Zamówień";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Zarządzanie Zamówieniami</h2>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Data</th>
                <th>Klient (Email)</th>
                <th>Dane wysyłkowe</th>
                <th>Kwota</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DataZamowienia.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (item.User != null)
                        {
                            <span>@item.User.Email</span>
                        }
                        else
                        {
                            <span class="text-danger">Konto usunięte</span>
                        }
                    </td>
                    <td>
                        @item.Imie @item.Nazwisko<br />
                        <small class="text-muted">@item.Miasto, @item.Adres</small>
                    </td>
                    <td class="fw-bold">
                        @item.TotalAmount.ToString("C2")
                    </td>
                    <td>
                        <a asp-controller="Zamowienia" asp-action="Szczegoly" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            Szczegóły
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Brak zamówień w bazie danych.</div>
    }
</div>