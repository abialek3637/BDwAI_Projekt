@model BDwAI.Models.Produkt

@{
    var outOfStock = Model.Quantity == 0;
}

<div class="col-md-3 mb-4">
    <div class="card h-100 shadow-sm border-0 @(outOfStock ? "bg-light text-muted" : "")">

        <div style="height: 200px; overflow: hidden;" class="d-flex align-items-center justify-content-center bg-light rounded-top">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="/images/@Model.ImagePath" class="card-img-top" alt="@Model.Name" style="height: 100%; width: 100%; object-fit: cover;">
            }
            else
            {
                <span class="text-muted">Brak zdjęcia</span>
            }
        </div>

        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>

            <div class="card-text mb-3">
                @if (outOfStock)
                {
                    <span class="fw-bold text-danger">Brak w magazynie</span>
                }
                else
                {
                    <h4 class="text-primary fw-bold">@Model.Price.ToString("c")</h4>
                }
            </div>

            <div class="mt-auto">
                @if (!outOfStock)
                {
                    <a asp-controller="Zamowienia"
                       asp-action="Create"
                       asp-route-produktId="@Model.Id"
                       class="btn btn-primary w-100">
                        Kup teraz
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary w-100" disabled>Niedostępny</button>
                }
            </div>
        </div>
    </div>
</div>