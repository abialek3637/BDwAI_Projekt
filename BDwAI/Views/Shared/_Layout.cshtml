<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Prymat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    🌶️ Prymat
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Produkty" asp-action="Index">
                                    📦 Panel produktów
                                </a>
                            </li>
    
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Zamowienia" asp-action="Index">
                                    📂 Zobacz Zamówienia
                                </a>
                            </li>
                        }
                        
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5>Prymat</h5>
                    <p>Najlepsze przyprawy do Twojej kuchni.</p>
                </div>
                <div class="col-md-4">
                    <h5>Kontakt</h5>
                    <p>Email: kontakt@prymat.pl<br />Tel: 123 456 789</p>
                </div>
                <div class="col-md-4">
                    <h5>Informacje</h5>
                    <ul class="list-unstyled">
                        <li>Regulamin</li>
                        <li>Polityka prywatności</li>
                        <li>Dostawa i płatności</li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-3">
                © @DateTime.Now.Year Prymat
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>