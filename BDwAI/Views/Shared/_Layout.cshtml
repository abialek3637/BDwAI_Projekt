<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Prymat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                🌶️ Prymat
            </a>

            <div class="ms-auto">
                <span class="me-3">Witaj w sklepie z przyprawami!</span>
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">
                    Zaloguj się
                </a>
            </div>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5>Prymat</h5>
                    <p>Najlepsze przyprawy do Twojej kuchni.</p>
                </div>
                <div class="col-md-4">
                    <h5>Kontakt</h5>
                    <p>Email: kontakt@prymat.pl<br />Tel: 123 456 789</p>
                </div>
                <div class="col-md-4">
                    <h5>Informacje</h5>
                    <ul class="list-unstyled">
                        <li>Regulamin</li>
                        <li>Polityka prywatności</li>
                        <li>Dostawa i płatności</li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-3">
                © @DateTime.Now.Year Prymat
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>