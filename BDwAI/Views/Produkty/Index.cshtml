@model IEnumerable<BDwAI.Models.Produkt>

@{
    ViewData["Title"] = "Zarządzanie Produktami";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Panel Administratora</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Dodaj nowy produkt
        </a>
    </div>
    <a asp-controller="Zamowienia" asp-action="Index" class="btn btn-warning ms-2">
        📂 Zobacz Zamówienia
    </a>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Kategoria</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Name</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        @if (item.Quantity < 5)
                        {
                            <span class="text-danger fw-bold">@item.Quantity (Niski stan!)</span>
                        }
                        else
                        {

                            <span>@item.Quantity</span>
                        }
                    </td>
                    <td>@item.CategoryId</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>