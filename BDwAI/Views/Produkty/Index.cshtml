@model IEnumerable<BDwAI.Models.Produkt>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Produktów</h1>

<p>
    <a asp-action="Create">Dodaj nowy produkt</a>
</p>
<form asp-controller="Produkty" asp-action="Index" method="get">
    <p>
        Szukaj: <input type="text" name="searchString" />
        <input type="submit" value="Szukaj" class="btn btn-primary" />
    </p>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (!Model.Any())
{
    <div class="alert alert-warning">
        Nie znaleziono żadnych produktów.
    </div>
}
