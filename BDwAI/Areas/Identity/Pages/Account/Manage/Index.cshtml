@page
@model IndexModel
@{
    ViewData["Title"] = "Mój Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">Dane logowania</div>
                <div class="card-body">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-success text-white">Dane do wysyłki</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.FirstName" class="form-control" />
                                <label asp-for="Input.FirstName"></label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.LastName" class="form-control" />
                                <label asp-for="Input.LastName"></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Street" class="form-control" />
                        <label asp-for="Input.Street"></label>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.ZipCode" class="form-control" />
                                <label asp-for="Input.ZipCode"></label>
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.City" class="form-control" />
                                <label asp-for="Input.City"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-lg btn-primary w-100">💾 Zapisz zmiany</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}